
{
  "schema": {
    "type": "object",
    "properties": {
      "inputs": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "label": { "type": "string" },
            "type": { "type": "string", "enum": ["select", "number", "text"] },
            "required": { "type": "boolean" },

            "datatype": { "type": "string", "enum": ["number", "string"] },
            "binary": { "type": "boolean" },
            "is_int": { "type": "boolean" },

            "options": {
              "oneOf": [
                {
                  "type": "array",
                  "items": { "type": "number" },
                  "minItems": 1
                },
                {
                  "type": "object",
                  "additionalProperties": { "type": "string" }
                }
              ]
            },

            "min": { "type": "number" },
            "max": { "type": "number" },
            "step": { "type": "number" }
          },

          "required": ["name", "label", "type", "required", "datatype"],
          "additionalProperties": false,

          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "select" } }
              },
              "then": {
                "required": ["options"],
                "not": {
                  "anyOf": [
                    { "required": ["min"] },
                    { "required": ["max"] },
                    { "required": ["step"] }
                  ]
                }
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "number" } }
              },
              "then": {
                "required": ["min", "max", "step"],
                "not": {
                  "required": ["options"]
                }
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "text" } }
              },
              "then": {
                "not": {
                  "anyOf": [
                    { "required": ["options"] },
                    { "required": ["min"] },
                    { "required": ["max"] },
                    { "required": ["step"] },
                    { "required": ["is_int"] }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    "required": ["inputs"],
    "additionalProperties": false
  },

  "execution_settings": {
    "default": {
      "temperature": 0,
      "max_tokens": 3000,
      "response_format": { "type": "json_object" }
    }
  }
}
